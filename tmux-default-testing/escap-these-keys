
# these need escaping of some sort
# a bind-key apostrophe `'` needs doubles `"'"`
# a bind-key semi-colon `;` need a backslash `\;`
# bind-keys `[?$&./#%!"<~]` need singles `'?'`

bind-key    -T prefix      "'"                command-prompt -p index "select-window -t ':%%'"

bind-key    -T copy-mode    \;                send-keys -X jump-again
bind-key    -T prefix       \;                last-pane
bind-key    -T copy-mode-vi \;                send-keys -X jump-again

bind-key    -T copy-mode-vi '?'                 command-prompt -p "(search up)" "send -X search-backward \"%%%\""
bind-key    -T prefix       '$'                 command-prompt -I "#S" "rename-session -- '%%'"
bind-key    -T prefix       '$'                command-prompt -I "#S" "rename-session -- '%%'"
bind-key    -T prefix       '&'                confirm-before -p "kill-window #W? (y/n)" kill-window
bind-key    -T prefix       '.'                command-prompt "move-window -t '%%'"
bind-key    -T prefix       '/'                command-prompt -p "what man man?" "split-window -p50 -h 'exec man %%'"
bind-key    -T prefix       '#'                list-buffers
bind-key    -T prefix       '%'                split-window -h
bind-key    -T prefix       '!'                break-pane
bind-key    -T prefix       '"'                split-window
bind-key    -T prefix       '<'                swap-pane -U
bind-key    -T prefix       ':'                command-prompt
bind-key    -T prefix       '~'                show-messages
bind-key    -T copy-mode-vi '$'                send-keys -X end-of-line
